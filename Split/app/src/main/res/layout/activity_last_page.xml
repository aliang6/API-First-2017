<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="split.split.LastPage">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/localPrice" />

    <Button
        android:id="@+id/cardButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="187dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Debit/Credit"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/venmoButton"
        app:layout_constraintTop_toBottomOf="@+id/pricePrompt" />

    <Button
        android:id="@+id/venmoButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="187dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_light"
        android:text="Venmo"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricePrompt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:text="Hostyy"
        android:textSize="33sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/localname"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/localname"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:text="Hostyyy"
        android:textSize="33sp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/localPrice"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="150dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/localname"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="140dp"
        android:text="Total Price"
        android:textAlignment="textStart"
        android:textSize="33sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:text="Hosty"
        android:textSize="33sp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/pricePrompt"
        android:layout_width="390dp"
        android:layout_height="69dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="425dp"
        android:text="How would you like to pay?"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
