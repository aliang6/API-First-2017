<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="split.split.BidPage">

    <TextView
        android:id="@+id/readyText2"
        android:layout_width="94dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="0.00"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_green_light"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/readyText" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:text="00.00"
        android:textAlignment="textStart"
        android:textSize="33sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/priceText"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:text="$"
        android:textAlignment="center"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <EditText
        android:id="@+id/priceInput"
        android:layout_width="259dp"
        android:layout_height="66dp"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="83dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="$"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/updateButton" />

    <Button
        android:id="@+id/readyButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="600dp"
        android:background="@android:color/holo_green_light"
        android:text="READY"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:text="Hostyy"
        android:textSize="33sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/localname" />

    <TextView
        android:id="@+id/localname"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:text="Hostyyy"
        android:textSize="33sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:text="$"
        android:textAlignment="center"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/localname"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:text="0.00"
        android:textAlignment="textStart"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView21"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/readyText"
        android:layout_width="94dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="150dp"
        android:text="0.00"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_light"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/priceText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:text="Hosty"
        android:textSize="33sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:text="$"
        android:textAlignment="center"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView28"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:text="000.00"
        android:textAlignment="textStart"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView29"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/readyText3"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="0.00"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_green_light"
        android:textSize="33sp"
        app:layout_constraintLeft_toRightOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/readyText2" />

    <TextView
        android:id="@+id/pricePrompt"
        android:layout_width="378dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="425dp"
        android:text="Price of your meal"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="104dp"
        android:layout_height="66dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Update"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
