<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="split.split.JoinRoom"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="183dp"
        android:layout_marginBottom="103dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="105dp"
        android:text="Enter the number of the room you would like to join"
        android:textAlignment="center"
        android:textSize="43sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/localNameText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.477" />

    <TextView
        android:id="@+id/HeyText"
        android:layout_width="98dp"
        android:layout_height="71dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="52dp"
        android:fontFamily="monospace"
        android:text="Hey"
        android:textSize="50sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/localNameText"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/localNameText"
        android:layout_width="203dp"
        android:layout_height="71dp"
        android:fontFamily="monospace"
        android:text="Name"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:layout_marginStart="112dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="150dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/HeyText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="98dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="number"
        android:maxLength="4"
        android:text="0000"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="@+id/button"
        app:layout_constraintRight_toRightOf="@+id/button"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:fontFamily="monospace"
        android:text="Join"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="77dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
